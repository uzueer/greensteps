# nginx/nginx.conf

server {
    listen 80;
    server_name _;   # Works for EC2 Public IP, DNS, or future domain

    # Serve static files
    location /static/ {
        alias /app/static/;
    }

    # Serve media files
    location /media/ {
        alias /app/media/;
    }

    # Forward all other requests to Django (Gunicorn)
    location / {
        proxy_pass http://web:8000;  # "web" = Django container name in docker-compose
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
